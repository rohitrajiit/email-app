# IMAP (receiving)
IMAP_HOST=imap.gmail.com
IMAP_PORT=993
IMAP_USERNAME=your.name@gmail.com
IMAP_PASSWORD=your_app_password
IMAP_FOLDER=INBOX

# SMTP (sending)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=465
SMTP_USERNAME=your.name@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_ENCRYPTION=ssl   # ssl | starttls
FROM_NAME=Your Name
FROM_EMAIL=your.name@gmail.com

# Flask
FLASK_SECRET_KEY=change_this_in_production
